<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.leyan_final_exam.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/deliveriesFragment"
        android:name="com.example.leyan_final_exam.DeliveriesFragment"
        android:label="Deliveries"
        tools:layout="@layout/fragment_deliveries" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.leyan_final_exam.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.leyan_final_exam.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/pendingFragment"
        android:name="com.example.leyan_final_exam.PendingFragment"
        android:label="Pending"
        tools:layout="@layout/fragment_pending">
        <action
            android:id="@+id/action_pendingFragment_to_deliveryDetailFragment"
            app:destination="@id/deliveryDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/inProgressFragment"
        android:name="com.example.leyan_final_exam.InProgressFragment"
        android:label="In Progress"
        tools:layout="@layout/fragment_in_progress">
        <action
            android:id="@+id/action_inProgressFragment_to_deliveryDetailFragment"
            app:destination="@id/deliveryDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/completedFragment"
        android:name="com.example.leyan_final_exam.CompletedFragment"
        android:label="Completed"
        tools:layout="@layout/fragment_completed">
        <action
            android:id="@+id/action_completedFragment_to_deliveryDetailFragment"
            app:destination="@id/deliveryDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/deliveryDetailFragment"
        android:name="com.example.leyan_final_exam.DeliveryDetailFragment"
        android:label="Delivery Details"
        tools:layout="@layout/fragment_delivery_detail" />

</navigation>
